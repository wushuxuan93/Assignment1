<div class="container">
    <h1>Business Contacts List</h1>

    <div class="row">
        <div class="col">
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa fa-plus"></i> Add Contact</a>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactsList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                    <tr>
                        <th scope="row" class="text-center"><%= count + 1 %></th>
                        <td><%= contacts[count].Contact_Name %></td>
                        <td><%= contacts[count].Contact_Number %></td>
                        <td><%= contacts[count].Contact_Email %></td>
                        <td class="text-center"><a href="/edit/<%= contacts[count]._id %>"
                                class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i>Edit</a></td>
                        <td class="text-center"><a href="/edit/<%= contacts[count]._id %>"
                                class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i>Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>